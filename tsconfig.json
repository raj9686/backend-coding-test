{
  "compilerOptions": {
    "experimentalDecorators": true,
    "incremental": true,
    "target": "ES2019",
    "lib": ["ES2019", "dom"],
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
  ]
}
